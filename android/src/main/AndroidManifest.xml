<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.amanmehara.programming.android">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        <activity
                android:name=".activities.MainActivity"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".activities.LanguageActivity"
                android:label="@string/app_name"
                android:parentActivityName=".activities.MainActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.amanmehara.programming.android.activities.MainActivity"/>
        </activity>
        <activity
                android:name=".activities.ProgramActivity"
                android:label="@string/app_name"
                android:parentActivityName=".activities.LanguageActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.amanmehara.programming.android.activities.LanguageActivity"/>
        </activity>
        <activity
                android:name=".activities.DetailActivity"
                android:label="@string/app_name">
        </activity>
        <activity
                android:name=".activities.ConnectionActivity"
                android:label="@string/app_name"
                android:noHistory="true"
                android:parentActivityName=".activities.MainActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.amanmehara.programming.android.activities.MainActivity"/>
        </activity>
        <activity
            android:name=".activities.GithubOAuthActivity"
            android:label="@string/app_name">
        </activity>
    </application>

</manifest>
